{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "jsx": "react",
        "baseUrl": ".",
        "paths": {
            "_/*": ["src/*"],
            "_public/*": ["public/*"],
            "_main/*": ["src/main/*"],
            "_models/*": ["src/models/*"],
            "_renderer/*": ["src/renderer/*"],
            "_utils/*": ["src/utils/*"],
            "_preload/*": ["src/types/*"],
            "_types/*": ["src/types/*"]
        },
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "target": "esnext"
    },
    "exclude": ["node_modules"]
}
